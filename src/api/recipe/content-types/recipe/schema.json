{
    "kind": "collectionType",
    "collectionName": "recipes",
    "info": {
        "singularName": "recipe",
        "pluralName": "recipes",
        "displayName": "Przepis"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "text"
        },
        "kcal": {
            "type": "integer"
        },
        "preparation": {
            "type": "richtext"
        },
        "prepTime": {
            "type": "integer"
        },
        "servings": {
            "type": "integer",
            "default": 1,
            "min": 1
        },
        "image": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "multiple": false
        },
        "mealSlot": {
            "type": "enumeration",
            "enum": [
                "sniadanie",
                "sniadanie-2",
                "obiad",
                "przekaska",
                "kolacja"
            ]
        },
        "macros": {
            "type": "component",
            "repeatable": false,
            "component": "shared.macros"
        },
        "ingredients": {
            "type": "component",
            "repeatable": true,
            "component": "shared.ingredient"
        },
        "profiles": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::profile.profile"
        },
        "tags": {
            "type": "string"
        },
        "sourceUrl": {
            "type": "string"
        },
        "author": {
            "type": "string"
        }
    }
}